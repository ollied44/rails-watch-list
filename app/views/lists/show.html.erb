<h1><%= @list.name %></h1>

<ul>
  <% @list.bookmarks.each do |bookmark| %>
    <li>
      <%= bookmark.movie.title %> - <%= bookmark.comment %>
      <%= link_to "Delete", bookmark_path(bookmark), method: :delete, data: { turbo: false, confirm: "Are you sure?" }, class: "btn btn-outline-danger btn-sm" %>
    </li>
  <% end %>
</ul>

<%= link_to "Add a new bookmark", new_list_bookmark_path(@list), class: "btn btn-primary mt-3" %>
